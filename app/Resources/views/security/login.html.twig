{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} | Login
{% endblock %}

{% block body %}
    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('{{ asset('bundles/clean-blog/img/home-bg.jpg') }}')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>Authentification</h1>
                        <hr class="small">
                    </div>
                </div>
            </div>
        </div>
    </header>

    {{ parent() }}

    {% if login_error %}
        <div class="alert alert-danger" role="alert">{{ login_error.message }}</div>
    {% endif %}

    <div class="container">
        <div class="row">

            <h1>Connectez-vous</h1>

            <form class="form-group" action="{{ path('authentication_check') }}" method="POST">

                <div class="row control-group"> 
                    <div class="form-group col-xs-12 controls">
                        <label for="username">Nom d'utilisateur:</label>
                        <input class="form-control" type="text" id="username" name="username" value="{{ last_username }}" />
                    </div>
                </div>

                <div class="row control-group"> 
                    <div class="form-group col-xs-12 controls">
                        <label for="password">Mot de passe:</label>
                        <input class="form-control" type="password" id="password" name="password" />
                    </div>
                </div>


                <input type="submit"  class="btn btn-success pull-right" value="Se connecter"/>
            </form>

        </div>
    </div>

{% endblock %}